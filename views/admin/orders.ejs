<!DOCTYPE html>
<html lang="en" dir="ltr" data-startbar="dark" data-bs-theme="light">

<head>
    <%- include('../partials/head') %>
    <style>
        .filter-bar {
            display: flex;
            justify-content: space-between;
            align-items: center;
            margin-bottom: 1rem;
        }
        .action-btn {
            margin-right: 5px;
        }
    </style>
</head>

<body>
    <%- include('../partials/topbar') %>
    <%- include('../partials/sidebar') %>

    <div class="page-wrapper">
        <div class="page-content">
            <div class="container-fluid">

                <div class="row mt-3">
                    <div class="col-sm-12">
                        <div class="page-title-box d-md-flex justify-content-md-between align-items-center">
                            <h4 class="page-title">Orders</h4>
                        </div>
                    </div>
                </div>

                <div class="row mt-4">
                    <div class="col-12">
                        <form class="filter-bar" method="GET" action="/admin/orders">
                            <div class="col-md-4 col-sm-12">
                                <input type="text" id="searchInput" name="user" class="form-control"
                                    placeholder="Search by Patient Name..." value="<%= typeof query !== 'undefined' ? query.user : '' %>">
                            </div>

                            <div>
                                <select id="statusFilter" name="status" class="form-select" style="width: 200px;" onchange="this.form.submit()">
                                    <option value="all" <%= (typeof query === 'undefined' || query.status === 'all') ? 'selected' : '' %>>All Orders</option>
                                    <option value="0" <%= (typeof query !== 'undefined' && query.status === '0') ? 'selected' : '' %>>Request</option>
                                    <option value="1" <%= (typeof query !== 'undefined' && query.status === '1') ? 'selected' : '' %>>In Review</option>
                                    <option value="2" <%= (typeof query !== 'undefined' && query.status === '2') ? 'selected' : '' %>>Order Confirm</option>
                                    <option value="3" <%= (typeof query !== 'undefined' && query.status === '3') ? 'selected' : '' %>>Sample Collected</option>
                                    <option value="4" <%= (typeof query !== 'undefined' && query.status === '4') ? 'selected' : '' %>>In Progress</option>
                                    <option value="6" <%= (typeof query !== 'undefined' && query.status === '6') ? 'selected' : '' %>>Reject</option>
                                </select>
                            </div>
                            <button type="submit" class="btn btn-primary ms-2">Search</button>
                            <a href="/admin/orders" class="btn btn-outline-secondary ms-2">Clear</a>
                        </form>
                    </div>
                </div>

                <div class="row mt-2">
                    <div class="col-12">
                        <div class="card">
                            <div class="card-header">
                                <h4 class="card-title">All Orders List</h4>
                            </div>
                            <div class="card-body">
                                <div class="table-responsive">
                                    <table class="table table-striped table-hover align-middle" id="ordersTable">
                                        <thead class="table-light">
                                            <tr>
                                                <th>Patient Name</th>
                                                <th>Address</th>
                                                <th>Package</th>
                                                <th>Lab</th>
                                                <th>Order Date</th>
                                                <th>Status</th>
                                                <th>Action</th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            <% if (typeof orders !== 'undefined' && orders.length > 0) { %>
                                                <% orders.forEach(order => { %>
                                                    <tr>
                                                        <td><%= order.user || 'N/A' %></td>
                                                        <td><%= order.user_address || 'N/A' %></td>
                                                        <td><%= order.package_name || 'N/A' %></td>
                                                        <td><%= order.laboratory_name || 'N/A' %></td>
                                                        <td><%= new Date(order.date).toLocaleDateString('en-GB') %></td>
                                                        <td>
                                                            <%
                                                                let statusText = 'Unknown';
                                                                let statusClass = 'secondary';
                                                                switch(order.status) {
                                                                    case 0: statusText = 'Request'; statusClass = 'warning'; break;
                                                                    case 1: statusText = 'In Review'; statusClass = 'secondary'; break;
                                                                    case 2: statusText = 'Order Confirm'; statusClass = 'success'; break;
                                                                    case 3: statusText = 'Sample Collected'; statusClass = 'info'; break;
                                                                    case 4: statusText = 'In Progress'; statusClass = 'primary'; break;
                                                                    case 6: statusText = 'Reject'; statusClass = 'danger'; break;
                                                                }
                                                            %>
                                                            <span class="badge bg-<%= statusClass %>-subtle text-<%= statusClass %>"><%= statusText %></span>
                                                        </td>
                                                        <td>
                                                            <a href="/admin/orders/<%= order._id %>" class="btn btn-sm btn-outline-info action-btn">View</a>
                                                            <% if (order.status < 5) { %> <button class="btn btn-sm btn-outline-success action-btn btn-confirm" data-id="<%= order._id %>">
                                                                    <%= (order.status === 4) ? 'Generate Report' : (order.status === 3) ? 'In Progress' : (order.status === 2) ? 'Collect' : 'Confirm' %>
                                                                </button>
                                                                <button class="btn btn-sm btn-outline-danger action-btn btn-reject" data-id="<%= order._id %>">Reject</button>
                                                            <% } %>
                                                        </td>
                                                    </tr>
                                                <% }); %>
                                            <% } else { %>
                                                <tr>
                                                    <td colspan="8" class="text-center">No orders found.</td>
                                                </tr>
                                            <% } %>
                                        </tbody>
                                    </table>
                                </div>
                                </div>
                        </div>
                    </div>
                </div>

            </div></div>
        </div>
    <%- include('../partials/scripts') %>

    <script>
        document.addEventListener('DOMContentLoaded', function () {
            
            // Confirm/Advance બટન માટે
            document.querySelectorAll('.btn-confirm').forEach(button => {
                button.addEventListener('click', async function () {
                    const orderId = this.getAttribute('data-id');
                    if (!confirm('Are you sure you want to advance the status of this order?')) {
                        return;
                    }

                    try {
                        const response = await fetch(`/admin/orders/${orderId}/confirm`, {
                            method: 'PATCH',
                            headers: { 'Content-Type': 'application/json' }
                        });

                        if (response.ok) {
                            alert('Order status updated!');
                            location.reload();
                        } else {
                            const data = await response.json();
                            alert(data.message || 'Failed to update status.');
                        }
                    } catch (error) {
                        alert('An error occurred.');
                    }
                });
            });

            // Reject બટન માટે
            document.querySelectorAll('.btn-reject').forEach(button => {
                button.addEventListener('click', async function () {
                    const orderId = this.getAttribute('data-id');
                    const reason = prompt("Please enter the reason for rejection:");

                    if (!reason) {
                        alert("Reason is required to reject an order.");
                        return;
                    }

                    try {
                        const response = await fetch(`/admin/orders/${orderId}/reject`, {
                            method: 'PATCH',
                            headers: { 'Content-Type': 'application/json' },
                            body: JSON.stringify({ reason: reason })
                        });

                        if (response.ok) {
                            alert('Order rejected!');
                            location.reload();
                        } else {
                            const data = await response.json();
                            alert(data.message || 'Failed to reject order.');
                        }
                    } catch (error) {
                        alert('An error occurred.');
                    }
                });
            });

        });
    </script>
</body>

</html>