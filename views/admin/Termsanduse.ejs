<!DOCTYPE html>
<html lang="en" dir="ltr" data-startbar="dark" data-bs-theme="light">

<head>
    <%- include('../partials/head') %>
    
    <!-- Summernote CSS -->
    <link href="https://cdn.jsdelivr.net/npm/summernote@0.8.18/dist/summernote-lite.min.css" rel="stylesheet">
</head>

<body>
    <%# 
      This page expects an object named 'data' 
      e.g., data = { _id: '...', terms_use: '...' }
    %>
    <%- include('../partials/topbar') %>
    <%- include('../partials/sidebar') %>

    <div class="page-wrapper">
        <div class="page-content">
            <div class="container-fluid">

                <!-- Page Title -->
                <div class="row">
                    <div class="col-sm-12">
                        <div class="page-title-box d-md-flex justify-content-md-between align-items-center">
                            <h4 class="page-title">Terms & Use</h4>
                        </div>
                    </div>
                </div>

                <!-- Editor Form -->
                <div class="row">
                    <div class="col-12">
                        <div class="card">
                            <div class="card-body">
                                <form method="POST" action="/admin/settings/terms">
                                
                                    <!-- Display success/error messages if passed from backend -->
                                    <% if (typeof error !== 'undefined' && error) { %>
                                        <div class="alert alert-danger"><%= error %></div>
                                    <% } %>
                                    <% if (typeof success !== 'undefined' && success) { %>
                                        <div class="alert alert-success"><%= success %></div>
                                    <% } %>

                                    <!-- Hidden ID field -->
                                    <input type="hidden" name="id" value="<%= (typeof data !== 'undefined' && data._id) ? data._id : '' %>">
                                    
                                    <!-- Summernote Editor -->
                                    <div class="mb-3">
                                        <textarea name="terms_use" id="summernote">
                                            <%= (typeof data !== 'undefined' && data.terms_use) ? data.terms_use : '' %>
                                        </textarea>
                                    </div>
                                    
                                    <button type="submit" class="btn btn-primary">Save</button>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>

            </div> <!-- container-fluid -->

            <!-- Appearance Offcanvas -->
            <div class="offcanvas offcanvas-end" tabindex="-1" id="Appearance" aria-labelledby="AppearanceLabel">
                <!-- ... your appearance settings ... -->
            </div>

        </div>
        <!-- end page content -->
    </div>
    <!-- end page-wrapper -->

    <%- include('../partials/scripts') %>

    <!-- Summernote JS -->
    <script src="https://code.jquery.com/jquery-3.4.1.slim.min.js"></script> <!-- Ensure jQuery is loaded -->
    <script src="https://cdn.jsdelivr.net/npm/summernote@0.8.18/dist/summernote-lite.min.js"></script>
    
    <script>
        $(document).ready(function() {
            $('#summernote').summernote({
                placeholder: 'Enter your terms and use here...',
                tabsize: 2,
                height: 400,
                toolbar: [
                    ['style', ['style']],
                    ['font', ['bold', 'underline', 'clear']],
                    ['color', ['color']],
                    ['para', ['ul', 'ol', 'paragraph']],
                    ['table', ['table']],
                    ['insert', ['link', 'picture', 'video']],
                    ['view', ['fullscreen', 'codeview', 'help']]
                ]
            });
        });
    </script>

</body>
</html>