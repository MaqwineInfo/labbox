<!DOCTYPE html>
<html lang="en" dir="ltr" data-startbar="dark" data-bs-theme="light">

<head>
    <%- include('../partials/head') %>
</head>

<body>

    <%- include('../partials/topbar') %>
    <%- include('../partials/sidebar') %>

    <div class="page-wrapper">
        <div class="page-content">
            <div class="container-fluid">

                <!-- Page Title -->
                <div class="row">
                    <div class="col-sm-12">
                        <div class="page-title-box d-md-flex justify-content-md-between align-items-center">
                             <!-- Title should be dynamic, e.g., "Packages for [SubPackage Name]" -->
                            <h4 class="page-title">Packages List</h4>
                            <a href="/admin/sub-packages" class="btn btn-sm btn-outline-secondary">Back to Sub-Packages</a>
                        </div>
                    </div>
                </div>

                <!-- Error/Success Messages -->
                <div class="row">
                    <div class="col-12">
                        <% if (typeof error !== 'undefined' && error) { %>
                            <div class="alert alert-danger"><%= error %></div>
                        <% } %>
                        <% if (typeof success !== 'undefined' && success) { %>
                            <div class="alert alert-success"><%= success %></div>
                        <% } %>
                    </div>
                </div>

                <!-- Package List Table -->
                <div class="row">
                    <div class="col-12">
                        <div class="card">
                            <div class="card-header">
                                <h4 class="card-title">Packages in Sub-Package</h4>
                            </div>
                            <div class="card-body">
                                
                                <div class="d-flex mb-3">
                                    <form class="d-flex" id="searchForm">
                                        <input class="form-control me-2" type="search" placeholder="Search" id="searchInput">
                                    </form>
                                </div>

                                <div class="table-responsive">
                                    <table class="table table-striped table-hover" id="SubPackageListTable">
                                        <thead>
                                            <tr>                                           
                                                <th>Package Name</th>
                                                <th>Status</th>
                                                <th>Action</th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            <% if (typeof packageList !== 'undefined' && packageList.length > 0) { %>
                                                <% packageList.forEach(a => { %>
                                                    <tr>
                                                        <td><%= a.name %></td>
                                                        <td>
                                                            <% if (a.status == 1) { %>
                                                                <span class="badge bg-success-subtle text-success">Active</span>
                                                            <% } else { %>
                                                                <span class="badge bg-danger-subtle text-danger">Inactive</span>
                                                            <% } %>
                                                        </td>
                                                        <td>
                                                            <button class="btn btn-sm btn-outline-danger action-btn" data-id="<%= a._id %>" data-subpackage-id="<%= subPackageId %>" data-action="delete">
                                                                Delete
                                                            </button>
                                                        </td>
                                                    </tr>
                                                <% }); %>
                                            <% } else { %>
                                                <tr>
                                                    <td colspan="3" class="text-center">No packages found in this sub-package.</td>
                                                </tr>
                                            <% } %>
                                        </tbody>
                                    </table>
                                </div>
                                <!-- Pagination (Add if needed) -->
                            </div>
                        </div>
                    </div>
                </div>

            </div> <!-- container-fluid -->

            <!-- Appearance Offcanvas -->
            <div class="offcanvas offcanvas-end" tabindex="-1" id="Appearance" aria-labelledby="AppearanceLabel">
                <div class="offcanvas-header border-bottom justify-content-between">
                    <h5 class="m-0 font-14" id="AppearanceLabel">Appearance</h5>
                    <button type="button" class="btn-close text-reset p-0 m-0 align-self-center" data-bs-dismiss="offcanvas" aria-label="Close"></button>
                </div>
                <div class="offcanvas-body"></div>
            </div>

        </div>
        <!-- end page content -->
    </div>
    <!-- end page-wrapper -->

    <!-- Delete Confirmation Modal -->
    <div class="modal fade" id="actionModal" tabindex="-1" role="dialog" aria-labelledby="actionModalLabel" aria-hidden="true">
        <div class="modal-dialog modal-dialog-centered" role="document">
            <div class="modal-content">
                <div class="modal-body text-center">
                    <h5 class="modal-title justify-content-center" id="actionModalLabel">
                        <i class="iconoir-warning-circle-outline" style="font-size: 3rem; color: #f1416c;"></i>
                    </h5><br>
                    <h6 id="confirmationMessage">Are you sure?</h6>
                </div>
                <div class="modal-footer justify-content-center">
                    <button type="button" class="btn btn-light" data-bs-dismiss="modal">Cancel</button>
                    <button type="button" class="btn btn-danger" id="confirmAction">OK</button>
                </div>
            </div>
        </div>
    </div>

    <%- include('../partials/scripts') %>

    <script>
        document.addEventListener('DOMContentLoaded', function() {
            // Client-side search
            document.getElementById('searchInput')?.addEventListener('keyup', function() {
                var value = this.value.toLowerCase();
                var rows = document.getElementById('SubPackageListTable').querySelectorAll('tbody tr');
                rows.forEach(row => {
                    var name = row.cells[0].textContent.toLowerCase();
                    row.style.display = name.includes(value) ? '' : 'none';
                });
            });

            // Action Modal Logic
            const actionModal = new bootstrap.Modal(document.getElementById('actionModal'));
            const confirmActionBtn = document.getElementById('confirmAction');
            const confirmationMessage = document.getElementById('confirmationMessage');
            let actionUrl = '';
            let httpMethod = 'POST';

            document.querySelectorAll('.action-btn').forEach(button => {
                button.addEventListener('click', function (e) {
                    e.preventDefault();
                    const packageId = this.getAttribute('data-id');
                    const subPackageId = this.getAttribute('data-subpackage-id');
                    const action = this.getAttribute('data-action');

                    if (action === 'delete') {
                        confirmationMessage.innerText = 'Are you sure you want to remove this package from the sub-package?';
                        // This URL needs to remove the package from the sub-package link
                        actionUrl = `/admin/sub-packages/delete-package-link?subPackageId=${subPackageId}&packageId=${packageId}`;
                        httpMethod = 'DELETE';
                    }
                    actionModal.show();
                });
            });

            confirmActionBtn.addEventListener('click', async function () {
                if (actionUrl) {
                    try {
                        const response = await fetch(actionUrl, { method: httpMethod });
                        if (response.ok) {
                            actionModal.hide();
                            location.reload();
                        } else {
                            alert('Failed to perform action.');
                        }
                    } catch (error) {
                        alert('An error occurred.');
                    }
                }
            });
        });
    </script>

</body>
</html>