<!DOCTYPE html>
<html lang="en" dir="ltr" data-startbar="dark" data-bs-theme="light">

<head>
    <%- include('../partials/head') %>
</head>

<body>

    <%- include('../partials/topbar') %>
    <%- include('../partials/sidebar') %>

    <div class="page-wrapper">
        <div class="page-content">
            <div class="container-fluid">

                <!-- Page Title -->
                <div class="row">
                    <div class="col-sm-12">
                        <div class="page-title-box d-md-flex justify-content-md-between align-items-center">
                            <h4 class="page-title">Patient Details</h4>
                            <a href="/admin/patients" class="btn btn-sm btn-outline-secondary">Back to List</a>
                        </div>
                    </div>
                </div>

                <!-- Error/Success Messages -->
                <div class="row">
                    <div class="col-12">
                        <% if (typeof error !== 'undefined' && error) { %>
                            <div class="alert alert-danger"><%= error %></div>
                        <% } %>
                        <% if (typeof success !== 'undefined' && success) { %>
                            <div class="alert alert-success"><%= success %></div>
                        <% } %>
                    </div>
                </div>

                <!-- Main User Detailing -->
                <% if (typeof user !== 'undefined' && user) { %>
                <div class="row">
                    <div class="col-12">
                        <div class="card">
                            <div class="card-header">
                                <h4 class="card-title">User Detailing List</h4>
                            </div>
                            <div class="card-body">
                                <div class="row">
                                    <div class="col-md-6">
                                        <dl class="row mb-0">
                                            <dt class="col-sm-4">Patient Name</dt>
                                            <dd class="col-sm-8"><%= user.name %></dd>

                                            <dt class="col-sm-4">Patient Contact</dt>
                                            <dd class="col-sm-8"><%= user.contact_no %></dd>

                                            <dt class="col-sm-4">Patient Age</dt>
                                            <dd class="col-sm-8"><%= user.age %></dd>

                                            <dt class="col-sm-4">Patient Relation</dt>
                                            <dd class="col-sm-8"><%= user.relation %></dd>

                                            <dt class="col-sm-4">Gender</dt>
                                            <dd class="col-sm-8"><%= user.gender %></dd>
                                        </dl>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <% } else { %>
                    <div class="alert alert-warning">User details not found.</div>
                <% } %>
                
                <!-- Related Patient Detailing List -->
                <div class="row">
                    <div class="col-12">
                        <div class="card">
                             <div class="card-header">
                                <h4 class="card-title">Patient Detailing List</h4>
                            </div>
                            <div class="card-body">
                                <div class="table-responsive">
                                    <table class="table table-striped table-hover" id="patientDetailTable">
                                        <thead>
                                            <tr>
                                                <th>Name</th>
                                                <th>Age</th>
                                                <th>Relation</th>
                                                <th>Gender</th>
                                                <th>Status</th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            <% if (typeof patients !== 'undefined' && patients.length > 0) { %>
                                                <% patients.forEach(p => { %>
                                                    <tr>
                                                        <td><%= p.name %></td>
                                                        <td><%= p.age %></td>
                                                        <td><%= p.relation %></td>
                                                        <td><%= p.gender %></td>
                                                        <td>
                                                            <% if (p.status == 1) { %>
                                                                <span class="badge bg-success-subtle text-success">Active</span>
                                                            <% } else { %>
                                                                <span class="badge bg-danger-subtle text-danger">Inactive</span>
                                                            <% } %>
                                                        </td>
                                                    </tr>
                                                <% }); %>
                                            <% } else { %>
                                                <tr>
                                                    <td colspan="5" class="text-center">No related patients found.</td>
                                                </tr>
                                            <% } %>
                                        </tbody>
                                    </table>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

            </div> <!-- container-fluid -->

            <!-- Appearance Offcanvas -->
            <div class="offcanvas offcanvas-end" tabindex="-1" id="Appearance" aria-labelledby="AppearanceLabel">
                <div class="offcanvas-header border-bottom justify-content-between">
                    <h5 class="m-0 font-14" id="AppearanceLabel">Appearance</h5>
                    <button type="button" class="btn-close text-reset p-0 m-0 align-self-center" data-bs-dismiss="offcanvas" aria-label="Close"></button>
                </div>
                <div class="offcanvas-body"></div>
            </div>

        </div>
        <!-- end page content -->
    </div>
    <!-- end page-wrapper -->

    <%- include('../partials/scripts') %>

</body>
</html>