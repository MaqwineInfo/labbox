<!DOCTYPE html>
<html lang="en" dir="ltr" data-startbar="dark" data-bs-theme="light">

<head>
    <%- include('../partials/head') %>
    <%# Add any specific CSS for this page if needed %>
</head>

<body>

    <%- include('../partials/topbar') %>
    <%- include('../partials/sidebar') %>

    <div class="page-wrapper">
        <div class="page-content">
            <div class="container-fluid">

                <!-- Page Title -->
                <div class="row">
                    <div class="col-sm-12">
                        <div class="page-title-box d-md-flex justify-content-md-between align-items-center">
                            <h4 class="page-title">Report</h4>
                        </div>
                    </div>
                </div>

                <!-- Error/Success Messages -->
                <div class="row">
                    <div class="col-12">
                        <% if (typeof error !== 'undefined' && error) { %>
                            <div class="alert alert-danger"><%= error %></div>
                        <% } %>
                        <% if (typeof success !== 'undefined' && success) { %>
                            <div class="alert alert-success"><%= success %></div>
                        <% } %>
                    </div>
                </div>

                <!-- Report Table and Filters -->
                <div class="row">
                    <div class="col-12">
                        <div class="card">
                            <div class="card-header">
                                <h4 class="card-title">Report List</h4>
                            </div>
                            <div class="card-body">
                                
                                <!-- Filters and Search -->
                                <div class="d-flex flex-wrap justify-content-between mb-3">
                                    <!-- Search Form -->
                                    <form class="d-flex" id="searchForm" action="/admin/reports" method="GET">
                                        <input class="form-control me-2" type="search" placeholder="Search by Name" name="user" value="<%= typeof query !== 'undefined' ? query.user : '' %>">
                                        <button class="btn btn-outline-primary" type="submit">Search</button>
                                        <a href="/admin/reports" class="btn btn-outline-secondary ms-2">Clear</a>
                                    </form>
                                    
                                    <!-- Filter Dropdown -->
                                    <div class="ms-auto">
                                        <div class="dropdown">
                                            <button class="btn btn-primary dropdown-toggle" type="button" id="filterDropdown" data-bs-toggle="dropdown" aria-expanded="false">
                                                Filter
                                            </button>
                                            <ul class="dropdown-menu dropdown-menu-end" aria-labelledby="filterDropdown">
                                                <li><a class="dropdown-item" href="/admin/reports?status=all">All</a></li>
                                                <li><a class="dropdown-item" href="/admin/reports?status=1">Active</a></li>
                                                <li><a class="dropdown-item" href="/admin/reports?status=0">Inactive</a></li>
                                            </ul>
                                        </div>
                                    </div>
                                </div>

                                <!-- Table -->
                                <div class="table-responsive">
                                    <table class="table table-striped table-hover" id="ReportTable">
                                        <thead>
                                            <tr>
                                                <th>Patient</th>
                                                <th>Address</th>
                                                <th>Package</th>
                                                <th>Prescription</th>
                                                <th>Order Date</th>
                                                <th>Report</th>
                                                <th>Status</th>
                                                <th>Upload</th>
                                                <th>Action</th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            <%# This file expects a 'reports' array from the backend %>
                                            <% if (typeof reports !== 'undefined' && reports.length > 0) { %>
                                                <% reports.forEach(report => { %>
                                                    <tr>
                                                        <td><%= report.user ? report.user.name : (report.user_name || 'N/A') %></td>
                                                        <td><%= report.user_address || 'N/A' %></td>
                                                        <td><%= report.package ? report.package.name : (report.package_id || '--') %></td>
                                                        <td>
                                                            <% if (report.prescription_details) { %>
                                                                <a href="<%= report.prescription_details %>" target="_blank">
                                                                    <img src="<%= report.prescription_details %>" style="border-radius:50%" width="50px" height="50px" alt="Prescription">
                                                                </a>
                                                            <% } else { %>
                                                                <p>No Prescription</p>
                                                            <% } %>
                                                        </td>
                                                        <td><%= new Date(report.date || report.createdAt).toLocaleDateString('en-GB') %></td>
                                                        <td>
                                                            <% if (report.avatar) { %>
                                                                <a href="<%= report.avatar %>" target="_blank">
                                                                    <img src="<%= report.avatar %>" style="border-radius:50%" width="50px" height="50px" alt="Report">
                                                                </a>
                                                            <% } else { %>
                                                                --
                                                            <% } %>
                                                        </td>
                                                        <td>
                                                            <%# Status from your blade file logic %>
                                                            <% if (report.status == 5 && !report.avatar) { %>
                                                                <span class="badge bg-warning-subtle text-warning">Pending</span>
                                                            <% } else if (report.avatar) { %>
                                                                <span class="badge bg-success-subtle text-success">Submitted</span>
                                                            <% } else { %>
                                                                <span class="badge bg-secondary-subtle text-secondary">Unknown</span>
                                                            <% } %>
                                                        </td>
                                                        <td>
                                                            <%# Upload button logic %>
                                                            <% if (!report.avatar) { %>
                                                                <button class="btn btn-sm btn-outline-success edit-report-btn" 
                                                                        data-bs-toggle="modal" 
                                                                        data-bs-target="#editReportModal" 
                                                                        data-id="<%= report.id || report._id %>">
                                                                    Upload
                                                                </button>
                                                            <% } else { %>
                                                                <button class="btn btn-sm btn-success" disabled>Uploaded</button>
                                                            <% } %>
                                                        </td>
                                                        <td>
                                                            <button class="btn btn-sm btn-outline-danger delete-report-btn" 
                                                                    data-id="<%= report.id || report._id %>">
                                                                <i class="iconoir-trash"></i>
                                                            </button>
                                                        </td>
                                                    </tr>
                                                <% }); %>
                                            <% } else { %>
                                                <tr>
                                                    <td colspan="9" class="text-center">No reports found.</td>
                                                </tr>
                                            <% } %>
                                        </tbody>
                                    </table>
                                </div>
                                <!-- Pagination (if you pass pagination data) -->
                                <!-- <div class="d-flex justify-content-end"> ... pagination links ... </div> -->
                            </div>
                        </div>
                    </div>
                </div>

            </div> <!-- container-fluid -->

            <!-- Appearance Offcanvas -->
            <div class="offcanvas offcanvas-end" tabindex="-1" id="Appearance" aria-labelledby="AppearanceLabel">
                <div class="offcanvas-header border-bottom justify-content-between">
                    <h5 class="m-0 font-14" id="AppearanceLabel">Appearance</h5>
                    <button type="button" class="btn-close text-reset p-0 m-0 align-self-center" data-bs-dismiss="offcanvas" aria-label="Close"></button>
                </div>
                <div class="offcanvas-body">
                    <%# ... Appearance settings ... %>
                </div>
            </div>

        </div>
        <!-- end page content -->
    </div>
    <!-- end page-wrapper -->

    <!-- Edit Report Modal (Upload) -->
    <div class="modal fade" id="editReportModal" tabindex="-1" aria-labelledby="editReportModalLabel" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="editReportModalLabel">Upload Report</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <hr>
                <form id="editReportForm" method="POST" enctype="multipart/form-data" action="/admin/report/update">
                    <div class="modal-body">
                        <input type="text" class="form-control" id="editReportId" name="id" hidden>
                        <div class="mb-3">
                            <label for="editReportImage" class="form-label">Report File (PDF/Image)</label>
                            <input type="file" class="form-control" id="editReportImage" name="avatar" required>
                            <!-- Image Preview (optional, good for images) -->
                            <div class="mt-2">
                                <img id="editReportImagePreview" src="" alt="Report Preview" style="height: 100px; width: 100px; border-radius:50%; display: none;">
                            </div>
                        </div>
                    </div>
                    <hr>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-light" data-bs-dismiss="modal">Close</button>
                        <button type="submit" class="btn btn-primary">Save Report</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
    
    <!-- Delete Confirmation Modal -->
    <div class="modal fade" id="deleteModal" tabindex="-1" role="dialog" aria-labelledby="deleteModalLabel" aria-hidden="true">
        <div class="modal-dialog modal-dialog-centered" role="document">
            <div class="modal-content">
                <div class="modal-body text-center">
                    <h5 class="modal-title justify-content-center" id="deleteModalLabel">
                        <i class="iconoir-warning-circle-outline" style="font-size: 3rem; color: #f1416c;"></i>
                    </h5><br>
                    <h6 id="confirmationMessage">Are you sure you want to delete this report?</h6>
                </div>
                <div class="modal-footer justify-content-center">
                    <button type="button" class="btn btn-light" data-bs-dismiss="modal">Cancel</button>
                    <button type="button" class="btn btn-danger" id="confirmDelete">OK</button>
                </div>
            </div>
        </div>
    </div>


    <%- include('../partials/scripts') %>

    <!-- Page Specific Scripts -->
    <script>
        document.addEventListener('DOMContentLoaded', function () {
            
            // 1. Handle Edit Modal (Upload)
            const editReportModal = document.getElementById('editReportModal');
            const editReportForm = document.getElementById('editReportForm');
            const editReportIdInput = document.getElementById('editReportId');
            const editReportImagePreview = document.getElementById('editReportImagePreview');
            const editReportImageInput = document.getElementById('editReportImage');

            document.querySelectorAll('.edit-report-btn').forEach(button => {
                button.addEventListener('click', function () {
                    const reportId = this.getAttribute('data-id');
                    editReportIdInput.value = reportId;
                    
                    // Set the form action dynamically
                    editReportForm.action = `/admin/report/update/${reportId}`;
                    
                    // Reset preview
                    editReportImagePreview.style.display = 'none';
                    editReportImagePreview.src = '';
                    editReportImageInput.value = ''; // Clear file input
                });
            });

            // Optional: Show image preview if a file is selected
            editReportImageInput.addEventListener('change', function(event) {
                const file = event.target.files[0];
                if (file && file.type.startsWith('image/')) {
                    const reader = new FileReader();
                    reader.onload = function(e) {
                        editReportImagePreview.src = e.target.result;
                        editReportImagePreview.style.display = 'block';
                    };
                    reader.readAsDataURL(file);
                } else {
                    editReportImagePreview.style.display = 'none';
                    editReportImagePreview.src = '';
                }
            });

            // 2. Handle Delete Confirmation Modal
            const deleteModal = new bootstrap.Modal(document.getElementById('deleteModal'));
            const confirmDeleteBtn = document.getElementById('confirmDelete');
            let deleteUrl = '';

            document.querySelectorAll('.delete-report-btn').forEach(button => {
                button.addEventListener('click', function () {
                    const reportId = this.getAttribute('data-id');
                    // Set the URL for the delete action (adjust as needed for METHOD)
                    deleteUrl = `/admin/report/delete/${reportId}`;
                    document.getElementById('confirmationMessage').innerText = 'Are you sure you want to delete this report?';
                    deleteModal.show();
                });
            });

            // Handle the actual delete/confirmation
            confirmDeleteBtn.addEventListener('click', async function() {
                if (deleteUrl) {
                    // You might need to use fetch() for a DELETE request
                    // For simplicity, we'll assume a GET or POST redirect for now
                    // Or use a form submission
                    
                    try {
                        // Example using fetch for a DELETE request
                        const response = await fetch(deleteUrl, {
                            method: 'DELETE', // or 'POST' if your server expects that
                            headers: {
                                // Add CSRF token header if needed
                                // 'X-CSRF-TOKEN': '...'
                            }
                        });
                        
                        if (response.ok) {
                            deleteModal.hide();
                            location.reload(); // Reload the page on success
                        } else {
                            alert('Failed to delete report.');
                            deleteModal.hide();
                        }
                    } catch (error) {
                        console.error('Error:', error);
                        alert('An error occurred.');
                        deleteModal.hide();
                    }
                }
            });

        });
    </script>

</body>
</html>